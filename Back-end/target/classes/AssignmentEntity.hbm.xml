<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.ex.Models.AssignmentEntity" table = "assignment" schema="public">

        <meta attribute = "class-description">
            This class contains the assignment detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "assignmentName" column = "assignment_name" type = "string"/>
        <property name = "assignmentType" column = "assignment_type" type = "string"/>
        <property name = "actualPoints" column = "actual_points" type = "int"/>
        <property name = "totalPoints" column = "total_points" type = "int"/>
        <property name = "dueDate" column = "due_date" type = "string"/>
        <property name = "pairId" column = "pair_id" type = "int"/>


    </class>
</hibernate-mapping>